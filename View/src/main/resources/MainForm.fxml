<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sudokuview.MainFormController">
   <children>
      <Text layoutY="84.0" strokeType="OUTSIDE" strokeWidth="0.0" text="TurboSudoku" textAlignment="CENTER" wrappingWidth="600.0">
         <font>
            <Font size="72.0" />
         </font>
      </Text>
      <Text fx:id="levelChooseText" layoutX="2.0" layoutY="158.0" strokeType="OUTSIDE" strokeWidth="0.0" text="%levelChooseText">
         <font>
            <Font size="48.0" />
         </font>
      </Text>
      <MenuBar layoutY="1.0">
         <menus>
            <Menu fx:id="file" mnemonicParsing="false" text="%file">
               <items>
                  <MenuItem fx:id="save" disable="true" mnemonicParsing="false" text="%save" />
                  <MenuItem fx:id="load" mnemonicParsing="false" onAction="#loadFromFile" text="%load" />
               </items>
            </Menu>
            <Menu fx:id="language" mnemonicParsing="false" text="%language">
               <items>
                  <MenuItem fx:id="pl" mnemonicParsing="false" onAction="#setLanguage" text="Polski" />
                  <MenuItem fx:id="en" mnemonicParsing="false" onAction="#setLanguage" text="English" />
               </items>
            </Menu>
            <Menu fx:id="about" mnemonicParsing="false" text="%about">
               <items>
                  <MenuItem fx:id="authors" mnemonicParsing="false" onAction="#getAuthors" text="%authors" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <ComboBox fx:id="levelChoose" layoutX="100.0" layoutY="225.0" onAction="#levelGenerate" prefHeight="100.0" prefWidth="400.0" style="-fx-font-size: 36;" />
   </children>
</Pane>
